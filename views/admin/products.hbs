<link rel="stylesheet" href="/stylesheets/products.css"/>
<section class="m-3 p-3">
    <div class="d-flex justify-content-end">
        <a href="/admin/add-products-page">
            <button type="button" class="btn btn-success">Add</button>
        </div>
    </a>
    <div class="table-responsive my-2">
        {{!--
        <input class="form-control mb-4"
               id="tableSearch"
               type="text"
               placeholder="Type something to search list items"/>
        --}}
        <table class="table table-striped table-hover table-dark"  id="tableSearch">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">NAME</th>
                    <th scope="col">CATAGORY</th>
                    <th scope="col">PRIcE</th>
                    <th scope="col">DESC</th>
                    <th scope="col">IMAGE</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody id="proTable">
                {{#each products }}
                    <tr>
                        <th scope="row">{{inc @index}}</th>
                        <td>{{this.name}}</td>
                        <td>{{this.category}}</td>
                        <td>{{this.price}}</td>
                        <td>{{this.discription}}</td>
                        <td>
                            <div class="d-flex justify-content-center" style="height: 50px;">
                                <img src="/products/{{this.img}}" alt=""/ style="max-width: 100%;">
                            </div>
                        </td>
                        <td>
                            <a class="btn btn-warning" href="/admin/edit-product/{{this._id}}">Edit</a>
                        </td>
                        <td>
                            <a class="btn btn-danger"
                               href="/admin/deleteProduct/{{this._id}}"
                               onclick="return confirm('Are you sure you want to delete {{this.name}} ?');">Delete</a>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>
</div>
