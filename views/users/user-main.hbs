</div>
<div id="carouselExampleControls" class="carousel slide m-3" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="/images/img1.webp" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="./images/img2.webp" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100"
                src="https://rukminim1.flixcart.com/fk-p-flap/844/140/image/3f256eb02be16383.jpg?q=50"
                alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="row" id="phone">

    <div class="row">
        {{#each products }}
        <div class="col-xxl-2 col-xl-3 col-md-4 col-sm-6 p-2" onclick="location.href = '/product/{{this._id}}'">
            <div class="d-flex justify-content-center flex-column shadow rounded p-1">
                <div class="d-flex justify-content-center">
                    <img src="/products/{{this.img}}" alt="Card image cap" style="height: 10rem; max-width: 100%;" />
                </div>
                <div class="d-flex justify-content-center flex-column">
                    <div style="max-width: fit-content;" class="">
                        <h5 class="text-truncate" style="max-width: fit-content;">{{this.model}}</h5>
                    </div>

                    {{#if ../user }}
                    <button class="btn btn-primary w-50 mx-auto" onclick="addToCart('{{this._id}}')">Cart</button>
                    {{/if}}
                </div>
            </div>
        </div>
        {{/each}}
    </div>