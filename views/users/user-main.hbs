<div id="carouselExampleControls"
     class="carousel slide m-3"
     data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="/images/img1.webp" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="./images/img2.webp" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="./images/img3.webp" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev"
       href="#carouselExampleControls"
       role="button"
       data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next"
       href="#carouselExampleControls"
       role="button"
       data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="row" id="phone">
    {{#each products}}
    <div class="col-md-3 col-sm-4">
        <div class="card h-100">
            <img class="card-img-top img-fluid"
                 src="/products/{{this.img}}"
                 alt="Card image cap"/>
            <div class="card-body">
                <h5 class="card-title"> {{this.name}} </h5>
                {{#if ../user}}
                    <button class="btn btn-primary" onclick="addToCart('{{this._id}}')">Cart</button>
                {{/if}}
            </div>
        </div>
    </div>
    {{/each}}
</div>
